.container-fluid.p-0.fixed-top.m-0
    .row.p-0.m-0.bg-light
        .col.text-center.font-weight-bold.font-italic.p-0.m-0
            p.p1.text-dark SFSU Software Engineering Project CSC 648-848, Summer 2020, For Demonstration Only
            nav.navbar.navbar-expand-lg.fixed-top.pt-5.pb-1.bg-light.border-bottom.border-light.shadow-lg.navBar
                    a.navbar-brand.p-0(href='/')
                        img(src='../resources/images/chillow_logo.png' style='width:200px; height:40px;')
                    button.navbar-toggler.navbar-light.p-0(type='button' data-toggle='collapse' data-target='#navbarResponsive')
                        span.navbar-toggler-icon
                    #navbarResponsive.collapse.navbar-collapse.p-0
                        ul.navbar-nav.nav-pills.p-0.mr-auto
                            li.nav-item.px-3
                                a#searchListings.nav-link.text-dark.rounded-0.text-nowrap(href='/listings') Search Listings
                            li.nav-item.px-3
                                a.nav-link.text-dark.rounded-0.text-nowrap(onclick='showPostListing()') Post Listing
                            li.nav-item.px-3
                                a.nav-link.text-dark.rounded-0.text-nowrap(href='/about') About
                        ul.navbar-nav.ml-auto
                            li
                                include navbarSearch.pug
                            li.nav-item.px-3
                                a.nav-link.text-dark.rounded-0.text-nowrap(href='/dashboard') Account
                            if loggedIn == 'false' || loggedIn == undefined
                                li.nav-item.px-3
                                    a.nav-link.text-dark.rounded-0.text-nowrap(href='/user/login') Login
                            else
                                li.nav-item.px-3
                                    a.nav-link.text-dark.rounded-0.text-nowrap(href='/api/logout') Logout


body.bg-light.m-4.p-4
    #backgroundOverlay_post.backgroundOverlay_post(onclick="showPostListing()")
    #postListingOverlay.postListingOverlay
        .container-fluid.pt-3.m-0.h-100.pb-3.overflow-auto
            .row.p-0.m-0
                .col.w-100.d-flex.flex-row.p-0.m-0.justify-content-center.text-center
                    label.h1.ml-auto="Post A Listing"
                    input.listingOverlay_ExitButton.btn.btn-outline-danger.m-0.ml-auto(type='button' onclick='showPostListing()' value='X')
            .row.p-0.m-0
                .col-lg.border.p-auto.overflow-auto
                    form(action='/api/create_listing' method='POST' name='listing_form' id='listing_form' enctype='multipart/form-data')
                        .container-fluid.pt-3.m-auto
                            .row.p-0.m-0.text-left
                                .col-sm
                                    label.h5='Add Listing'
                            .row.p-0.m-1.text-left
                                .col-sm
                                    label.h6="street_addr"
                                .col-sm
                                    input(type='text' name='street_addr' placeholder='Street Address')
                            .row.p-0.m-1.text-left
                                .col-sm
                                    label.h6="city"
                                .col-sm
                                    input(type='text' name='city' placeholder='City')
                            .row.p-0.m-1.text-left
                                .col-sm
                                    label.h6="zipcode"
                                .col-sm
                                    input(type='text' name='zipcode' placeholder='Zipcode')
                            .row.p-0.m-1.text-left
                                .col-sm
                                    label.h6="price"
                                .col-sm
                                    input(type='text' name='price' placeholder='Price')
                            .row.p-0.m-1.text-left
                                .col-sm
                                    label.h6="description"
                                .col-sm
                                    input(type='text' name='description' placeholder='Description')
                            .row.p-0.m-1.text-left
                                .col-sm
                                    label.h6="sell_rent"
                                .col-sm
                                    input(type='text' name='sell_rent' placeholder='0: Rent, 1: Sell')
                            .row.p-0.m-1.mt-3.text-left
                                .col
                                    label.h6(style='font-size: 12px;')="1 - Apartment, 2 - House, 3 - Condo, 4 - Studio, 5 - Other"
                            .row.p-0.m-1.mt-0.text-left
                                .col-sm
                                    label.h6="category"
                                .col-sm
                                    input(type='text' name='category' placeholder='Category Number')
                            .container-fluid.pt-3.m-auto
                            .row.p-0.m-0.text-left
                                .col-sm
                                    label.h5='Add a Picture'
                            .row.p-0.m-1.text-left
                                .col-sm
                                    label.h6="photo_upload"
                                .col-sm
                                    input.mr-2.form-check(type='file' name='upload_file')
                            .row.p-0.m-1.mt-3.text-left
                                .col
                                    input.btn.btn-outline-primary(type='submit' value='Submit Listing')
    script.
        function showPostListing(){
            if(!document.getElementById('postListingOverlay').style.display || document.getElementById('postListingOverlay').style.display == "none"){
                document.getElementById('backgroundOverlay_post').style.display = "block";
                document.getElementById('postListingOverlay').style.display = "block";
            } else {
                document.getElementById('postListingOverlay').style.display = "none";
                document.getElementById('backgroundOverlay_post').style.display = "none";
            }
        }
